<div class= "Container__tweetBox">
<ul>
<% @tweets.each do |tweet| %>
  <li>
    <%= tweet.user.avatar.attached? ? image_tag(tweet.avatar) : image_tag('default_user.svg') %>
    <%= tweet.body%>
  </li>
<% end %>

</ul>

</div>
